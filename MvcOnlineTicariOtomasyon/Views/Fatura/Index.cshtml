@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Fatura>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>Seri Sıra No</th>
        <th>Vergi Dairesi</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Teslim Eden</th>
        <th>Teslim Alan</th>
        <th>Toplam</th>
        <th>Düzenle</th>
        <th>Detaylar</th>
        <th>Yeni Kalem</th>
    </tr>
    @foreach (var k in Model)
    {
<tr>
    <td>@k.FaturaSeriNo @k.FaturaSiraNo</td>
    <td>@k.VergiDairesi</td>
    <td>@Convert.ToDateTime(k.Tarih).ToString("dd/MM/yyyy")</td>
    <td>@k.Saat</td>
    <td>@k.TeslimEden</td>
    <td>@k.TeslimAlan</td>
    <td>@k.Toplam ₺</td>
    <td><a href="/Fatura/FaturaGetir/@k.FaturaID" class="btn btn-success">Düzenle</a></td>
    <td><a href="/Fatura/FaturaDetay/@k.FaturaID" class="btn btn-info">Detaylar</a></td>
    <td><a href="/Fatura/YeniKalem/" class="btn btn-warning">Yeni Kalem</a></td>
</tr>
    }
</table>
<a href="/Fatura/FaturaEkle/" class="btn btn-info">Fatura Oluştur</a>

<button class="btn btn-danger" type="button" data-toggle="modal" data-target="#Modal1">Popup Penceresi</button>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Popup Diyalog</h2>
            </div>
            <div class="modal-body">
                <table class="table table-bordered">
                    <tr>
                        <td>Seri No</td>
                        <td>Sıra No</td>
                        <td>Toplam</td>
                    </tr>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@x.FaturaSeriNo</td>
                            <td>@x.FaturaSiraNo</td>
                            <td>@x.Toplam</td>
                        </tr>
                    }
                </table>
                <button type="button" class="btn btn-danger" data-dismiss="modal">< Geri Dön </button>
            </div>
        </div>
    </div>
</div>
