@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<KargoDetay>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
@using (Html.BeginForm("Index", "Kargo", FormMethod.Get))
{
    <p>
        Kargo Takip Numarası: @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}
<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>Personel</th>
        <th>Alıcı</th>
        <th>Tarih</th>
        <th>Takip Kodu</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var k in Model)
    {
<tr>
    <td>@k.Personel</td>
    <td>@k.Alici</td>
    <td>@Convert.ToDateTime(k.Tarih).ToString("dd/MM/yyyy")</td>
    <th># @k.TakipKodu</th>
    <td><a href="/Kargo/KargoTakip/@k.TakipKodu" class="btn btn-info">Detaylar</a></td>
</tr>
    }
</table>
<a href="/Kargo/YeniKargo/" class="btn btn-info">Yeni Kargo Girişi</a>

