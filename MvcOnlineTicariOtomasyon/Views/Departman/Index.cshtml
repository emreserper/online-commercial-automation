@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Departman>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>Departman Adı</th>
        <th>Sil</th>
        <th>Düzenle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var k in Model)
    {
<tr>
    <td>
        @k.DepartmanAd
    </td>
    <td><a href="/Departman/DepartmanSil/@k.DepartmanID" class="btn btn-danger">Sil</a></td>
    <td><a href="/Departman/DepartmanGetir/@k.DepartmanID" class="btn btn-success">Düzenle</a></td>
    <td><a href="/Departman/DepartmanDetay/@k.DepartmanID" class="btn btn-info">Detaylar</a></td>
</tr>
    }
</table>
<a href="/Departman/DepartmanEkle/" class="btn btn-info">Departman Ekle</a>

